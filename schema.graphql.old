type Transaction @entity {
  id: ID! # Transaction hash
  value: BigInt!
  to: String!
  from: String!
  contractAddress: String!
}

type Account @entity {
  id: ID! # account address
  stakes: [Stake]! @derivedFrom(field: "account") #virtual field
}

type Stake @entity {
  id: ID! # Transaction hash
  account: Account!
  value: BigInt!
  contractAddress: String!
}

type Approval @entity {
  id: ID! # Transaction hash
  value: BigInt!

  owner: String!

  spender: String!

  contractAddress: String!
}
